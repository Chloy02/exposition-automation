{
    "manifest_version": 3,
    "name": "Gmail Page Email Extractor",
    "version": "1.0",
    "description": "Extracts sender, subject, date, and attachment links from visible Gmail emails.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://mail.google.com/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }